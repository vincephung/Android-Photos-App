<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android50" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android50" >
        <activity
            android:name=".AddEditAlbum"
            android:label="@string/title_activity_add_edit_album"
            android:theme="@style/Theme.Android50.NoActionBar" >
        </activity>
        <activity
            android:name=".InsideAlbum"
            android:label="@string/title_activity_inside_album"
            android:parentActivityName=".UserAlbums"
            android:theme="@style/Theme.Android50.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTag"></activity>
        <activity android:name=".Slideshow" />
        <activity android:name=".DisplayPhoto" />
        <activity android:name=".Search" />
        <activity android:name=".UserAlbums">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>